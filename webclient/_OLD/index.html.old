<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>DFS3 - Inicio</title>
  <script type="module">
    // Al cargar la página
    const users = JSON.parse(localStorage.getItem('dfs3_users') || '{}');
    if (Object.keys(users).length === 0) {
      // Redirigir a registro si no hay claves
      window.location.href = 'register.html';

    } else {
      document.addEventListener('DOMContentLoaded', () => {
        document.body.innerHTML = '<h1>Claves encontradas</h1><p>Ya estás registrado. En el futuro aquí irá el login o dashboard.</p>';
      });
    }
  </script>
</head>
<body>
</body>
</html>
